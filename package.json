{
  "name": "guardian-of-env",
  "version": "1.1.6",
  "description": "ensure .env files are all the same",
  "main": "./lib/main.js",
  "repository": "https://github.com/hermeslin/guardian-of-env.git",
  "author": "hermeslin <mercury.iwork@gmail.com>",
  "contributors": [
    "Peng-Jie <bivinity.pengzjie@gmail.com>"
  ],
  "license": "MIT",
  "keywords": [
    "guardian",
    "env",
    ".env",
    "environment",
    "config",
    "settings"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "lint": "./node_modules/.bin/eslint ./src/**",
    "test": "./node_modules/.bin/cross-env NODE_ENV=test NODE_PATH=./src ./node_modules/.bin/mocha --require @babel/register",
    "test:coverage": "npm run lint && cross-env NODE_ENV=test ./node_modules/.bin/nyc npm test",
    "test:coverage:html": "npm run lint && cross-env NODE_ENV=test ./node_modules/.bin/nyc --reporter=html npm test",
    "report-coverage": "./node_modules/.bin/nyc report --reporter=text-lcov | ./node_modules/.bin/codecov --pipe",
    "build": "cross-env BABEL_ENV=production babel src --out-dir lib",
    "pre-publish": "yarn clean && yarn lint && yarn test && yarn build"
  },
  "bin": {
    "guardian-of-env": "./lib/main.js"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "dotenv": "^8.0.0",
    "lodash.isequal": "^4.5.0",
    "table": "^5.4.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.3",
    "@babel/register": "^7.4.0",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "codecov": "^3.3.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.0",
    "mocha": "^6.1.3",
    "nyc": "^14.0.0",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.2"
  }
}
